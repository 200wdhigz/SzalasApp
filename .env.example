# Environment Configuration Template
# Copy this file to .env and fill in your values

# Flask Configuration
SECRET_KEY=your-secret-key-here-generate-with-secrets-token-hex-32
DEBUG=False
PORT=8080
HOST=0.0.0.0

# Reverse Proxy Configuration (Nginx Proxy Manager, Traefik, etc.)
# Ustaw na True jeśli aplikacja działa za reverse proxy
USE_PROXY_FIX=True
# Schemat URL (http lub https) - używany gdy aplikacja jest za reverse proxy
PREFERRED_URL_SCHEME=https

# Google Cloud / Firebase Configuration
GOOGLE_PROJECT_ID=your-project-id
GOOGLE_CLOUD_STORAGE_BUCKET_NAME=your-bucket-name
GOOGLE_API_KEY=your-api-key
GOOGLE_APPLICATION_CREDENTIALS=./credentials/service-account.json

# ReCAPTCHA Configuration
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_PROJECT_ID=your-recaptcha-project-id

# OAuth Configuration (if used)
GOOGLE_CLIENT_ID=your-oauth-client-id
GOOGLE_CLIENT_SECRET=your-oauth-client-secret

# Email/SMTP Configuration (if used)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD="your-app-password"

# Application URL
APP_URL=https://your-domain.com

